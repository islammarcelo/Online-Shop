<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerRegistrationActivity">
    
    <ImageView
        android:id="@+id/img_seller_register"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/seller"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title_seller_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Registration Form"
        android:gravity="center"
        android:layout_below="@id/img_seller_register"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/holo_green_dark"/>

    <EditText
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/title_seller_register"
        android:hint="Name..."
        android:inputType="text"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/seller_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/seller_name"
        android:hint="phone..."
        android:inputType="text"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/seller_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/seller_phone"
        android:hint="Email..."
        android:inputType="text"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/seller_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/seller_email"
        android:hint="Password..."
        android:inputType="text"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/seller_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/seller_password"
        android:hint="Shop - Business Address..."
        android:inputType="text"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/seller_registration_bnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seller_Already_have_an_Account_bnt"
        android:layout_margin="15dp"
        android:background="@android:color/holo_green_dark"
        android:text="Registration"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/seller_Already_have_an_Account_bnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_green_light"
        android:text="Already have an Account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>







</RelativeLayout>